<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nome e Símbolo da Criptomoeda -->
        <TextView
            android:id="@+id/text_name_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bitcoin (BTC)"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <!-- Preço Atual -->
        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$43,317.90"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="4dp"/>

        <!-- Variação Percentual em 24h -->
        <TextView
            android:id="@+id/text_percent_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+0.17%"
            android:textSize="14sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="2dp"/>

        <!-- Volume de Negociação em 24h -->
        <TextView
            android:id="@+id/text_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volume (24h): 4,663"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="2dp"/>

        <!-- Market Cap -->
        <TextView
            android:id="@+id/text_market_cap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market Cap: $887.76M"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="2dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>
